@page
@model InterviewScheduler_2.Pages.ScheduleContent.Scheduler_CreateModel

@{
    ViewData["Title"] = "Scheduler_Create";
}

@section Scripts {
   
    <script src="https://code.jquery.com/jquery-1.12.3.min.js" integrity="sha256-aaODHAgvwQW1bFOGXMeX+pC4PZIPsvn2h1sArYOhgXQ=" crossorigin="anonymous"></script>

    <script src="~/js/Scheduler3.js"></script>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-primary" role="alert">
       @TempData["SuccessMessage"]
    </div>
    
}

  
<div class="container bg-secondary">
    <div class="row justify-content-end mb-3 mt-3">
        <div class="col-md-2">  <a asp-page="/Logout" class="btn btn-danger">Logout</a></div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 ">
            <h1>Create Schedule</h1>

            <hr />
            <form method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Scheduler.UserId" />
                <div class="form-group mb-3">
                    <label class="control-label">Applied Company:</label>
                </div>
                <div class="form-group mb-3">
                    <select id="companyDropdown" asp-for="selectedCompany">
                        Select Company
                    </select>
                </div>

                <div class="form-group mb-3">
                    <button id="AddCompanyButton" class="btn btn-dark" type="button">Create Company</button>
                    <div class="ShowCompanyCreate"></div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Scheduler.AppliedPost" class="control-label"></label>
                    <input asp-for="Scheduler.AppliedPost" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Scheduler.Scheduled_Date"> Date and Time:</label>
                    <input asp-for="Scheduler.Scheduled_Date" class="form-control" type="datetime-local" />
                    <span asp-validation-for="Scheduler.Scheduled_Date" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <select id="roundDropdown" asp-for="selectedRound">
                        Select Round
                    </select>
                </div>

                <div class="form-group mb-3">
                    <button id="AddRoundButton" class="btn btn-dark" type="button">Create Round</button>
                    <div class="ShowRoundCreate"></div>
                </div>

                <div class="form-group mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>




        </div>
    </div>
</div>



