@page
@model InterviewScheduler_2.Pages.UserRegistration.UserLoginModel


<div class="container">
    <div class="row justify-content-center mb-5 bg-secondary">
        <div class="col-6">
            <h1>UserLogin</h1>
            <form method="post" class="mb-3">
                <div class="form-group mb-3">
                    <label asp-for="User_obj.User_Name" class="control-label"></label>
                    <input class="form-control" asp-for="User_obj.User_Name" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="User_obj.User_Password" class="control-label"></label>
                    <input class="form-control" asp-for="User_obj.User_Password" />
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Log in" class="btn btn-primary" />
                </div>
            </form>
        </div>


    </div>
    <div class="row justify-content-center">
        
        <div class="col-md-2 align-items-center"> 
            <p>Dont have an Account?</p>
            <a asp-page="/UserRegistration/UserRegistration" class="btn btn-outline-primary ml-2">Sign in</a>
        </div>
    </div>
</div>
   

